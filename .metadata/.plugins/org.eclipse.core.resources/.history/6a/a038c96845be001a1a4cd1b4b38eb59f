
public class Trapezio {

	public static void main(String[] args) {
		
		double b, B, h, area;
		b = 6.0;
		B = 8.0;
		h = 5.0;
		
		area = (b + B) / 2.0 * h;
		System.out.println(area);
		
		float base, Base, altura, area;
		base = 6f;
		Base = 8f;
		altura = 5f;
		
		area = (b + B) / 2f * h;
		System.out.println(area);
		
	}

}
